<Window x:Class="Error_Reporter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LCPDFR Error Reporter" Height="190" Width="525" MaxHeight="190" MaxWidth="525" MinHeight="190" MinWidth="525" Topmost="True">
    <Grid Height="139" VerticalAlignment="Top" Margin="0,0,0,-3">
        <TextBlock Margin="40,20,39,0" TextWrapping="Wrap" Text="Your game has crashed, please wait while we are trying to restore your session..." VerticalAlignment="Top"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="19" Margin="40,49,0,0" VerticalAlignment="Top" Width="438" IsIndeterminate="True"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="421,119,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="This is not a LCPDFR crash, please don't report." HorizontalAlignment="Left" Margin="10,113,0,0" VerticalAlignment="Top" Foreground="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
        <Label x:Name="LabelState" Content="Idle" HorizontalAlignment="Left" Margin="36,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.368,0.231" Width="442"/>
        <Button x:Name="BtnHelp" Content="Help" HorizontalAlignment="Left" Margin="341,119,0,0" VerticalAlignment="Top" Width="75" Click="BtnHelp_Click"/>
    </Grid>
</Window>
